meta(charset='utf-8')
meta(name='X-UA-Compatible', content='IE=edge')

title
    block site_title
        = config.title

block description
    meta(name='description', content=config.description ? config.description : __('meta_description'))

meta(name='viewport', content='width=device-width, initial-scale=1')

link(rel='icon', href=relative_url(path, theme.favicon))
link(rel='stylesheet', href=relative_url(path, 'css/theme.css'))
link(rel='search', type='application/opensearchdescription+xml', href=relative_url(path, 'atom.xml'), title=config.title)
